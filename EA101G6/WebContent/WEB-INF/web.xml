<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>EA101G6</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <resource-ref>
  	<description>DB connection</description>
  	<res-ref-name>jdbc/EA101G6DB</res-ref-name>
  	<res-type>javax.sql.DataSource</res-type>
  	<res-auth>Container</res-auth>
  </resource-ref>
  <servlet>
    <servlet-name>ShgmServlet</servlet-name>
    <servlet-class>com.shgm.controller.ShgmServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShgmServlet</servlet-name>
    <url-pattern>/back-end/shgm/shgm.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShgmServlet</servlet-name>
    <url-pattern>/front-end/shgm/shgm.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DisplayImg</servlet-name>
    <servlet-class>com.shgm.controller.DisplayImg</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DisplayImg</servlet-name>
    <url-pattern>/back-end/shgm/displayimg</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>ShgmrpServlet</servlet-name>
  	<servlet-class>com.shgmrp.controller.ShgmrpServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ShgmrpServlet</servlet-name>
  	<url-pattern>/back-end/shgmrp/shgmrp.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ShgmrpServlet</servlet-name>
  	<url-pattern>/front-end/shgm/shgmrp.do</url-pattern>
  </servlet-mapping>
  <filter>
  	<filter-name>InfoPageFilter</filter-name>
  	<filter-class>com.shgm.controller.RandListFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>InfoPageFilter</filter-name>
  	<url-pattern>/front-end/shgm/infoPage.jsp</url-pattern>
  	<dispatcher>REQUEST</dispatcher>
  	<dispatcher>FORWARD</dispatcher>
  	<dispatcher>ERROR</dispatcher>
  	<dispatcher>ASYNC</dispatcher>
  </filter-mapping>
</web-app>